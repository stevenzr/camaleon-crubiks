<div class="about">
    <div class="container">
        <h3><%= @post.the_title %></h3>
        <p class="vel iste"><%= @post.the_excerpt %></p>
        <div class="about-grids">
            <% @post.the_fields_grouped(['member_name', 'member_role', 'about-member', 'member_avatar', 'member_facebook-url', 'member_twitter_url', 'member_site_url']).each do |member| %>
                <div class="col-md-4 about-grid">
                    <img src="<%= member['member_avatar'].first || theme_asset_url('images/11.jpg') %>" alt=" " class="img-responsive" />
                    <div class="about-grid-john">
                        <div class="john">
                            <h4><%= member['member_name'].first %></h4>
                            <p><%= member['member_role'].first %></p>
                        </div>
                        <div class="social-icons">
                            <ul>
                                <% if(fb = member['member_facebook-url'].first).present? %>
                                    <li><a href="<%= fb %>" class="facebook1"> </a></li>
                                <% end %>
                                <% if(fb = member['member_twitter_url'].first).present? %>
                                    <li><a href="<%= fb %>" class="twitter1"> </a></li>
                                <% end %>
                            </ul>
                        </div>
                        <div class="clearfix"> </div>
                        <p class="para"><%= member['about-member'].first %></p>
                        <% if(url = member['member_site_url'].first).present? %>
                            <div class="hello">
                                <a href="<%= url %>">Say Hello</a>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
