<div class="col-md-4 blog-right">
    <h3>Categories</h3>
    <ul>
        <% post_type.the_categories.decorate.each do |cat| %>
            <li><a href="<%= cat.the_url %>"><%= cat.the_title %></a></li>
        <% end %>
    </ul>
    <div class="recent">
        <h3>Recent Comments</h3>
        <div class="recent-grids">
            <% post_type.comments.reorder(created_at: :desc).limit(3).decorate.each do |comment| post = comment.the_post; %>
                <div class="recent-grid">
                    <div class="wom">
                        <a href="#"><img src="<%= post.the_thumb_url(theme_asset_url('images/6.jpg')) %>" alt=" " class="img-responsive" /></a>
                    </div>
                    <div class="wom-right">
                        <h4><a href="#"><%= post.the_title %></a></h4>
                        <p><%= comment.content %></p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="footer-top-grid1">
        <h3>Recent Tags</h3>
        <ul class="tag2">
            <% post_type.the_post_tags.decorate.each do |tag| %>
                <li><a href="<%= tag.the_url %>"><%= tag.the_title %></a></li>
            <% end %>
        </ul>
    </div>
    <div class="poll">
        <h3>Poll</h3>
        <div class="progress p">
            <div class="progress-bar bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                60%
            </div>
        </div>
        <div class="progress p">
            <div class="progress-bar bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 80%;">
                80%
            </div>
        </div>
        <div class="progress p">
            <div class="progress-bar bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
                90%
            </div>
        </div>
        <div class="progress p">
            <div class="progress-bar bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                40%
            </div>
        </div>
    </div>
</div>